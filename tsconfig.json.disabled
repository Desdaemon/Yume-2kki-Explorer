{
  "include": [
    "src/**/*.js"
  ],
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "DOM",
      "ES2017"
    ],
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  }
}